<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="DetailLabel" parent="android:Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">12sp</item>
        <item name="android:alpha">0.7</item>
        <item name="android:paddingBottom">2dp</item>
    </style>

    <style name="DetailValue" parent="android:Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:paddingBottom">8dp</item>
    </style>

    <style name="DetailValueGreen" parent="DetailValue">
        <item name="android:textColor">@color/green_primary</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

</resources>